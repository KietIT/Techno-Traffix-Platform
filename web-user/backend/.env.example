# Techno Traffix Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for AI Chat
ANTHROPIC_API_KEY=your-api-key-here

# Optional: AI Model (defaults to claude-3-haiku-20240307)
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Server Configuration (used by Render)
HOST=0.0.0.0
PORT=5000
DEBUG=False

# RAG Thresholds (optional - defaults provided)
RAG_FAQ_THRESHOLD=3.0
RAG_VIOLATION_THRESHOLD=4.0
RAG_GPLX_THRESHOLD=3.0
